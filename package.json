{
  "name": "tiima",
  "version": "1.0.0",
  "description": "time tracking software",
  "main": "src/main.js",
  "scripts": {
    "build": "npm run build-js && npm run build-css",
    "build-js": "browserify src/main.js -o bundle.js",
    "watch-js": "watchify src/main.js -o bundle.js -v",
    "build-css": "lessc style.less --clean-css=\"--s1 --advanced --compatibility=ie8\" --autoprefix=\"ie >= 8\" style.css",
    "test": "jest",
    "lint": "eslint src/**/*.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/siiptuo/tiima.git"
  },
  "author": "Tuomas Siipola <siiptuo@kapsi.fi>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/siiptuo/tiima/issues"
  },
  "homepage": "https://github.com/siiptuo/tiima#readme",
  "dependencies": {
    "babel-preset-react": "^6.3.13",
    "babelify": "^7.2.0",
    "normalize.css": "^4.0.0",
    "react": "^0.14.7",
    "react-dom": "^0.14.7",
    "react-router": "^2.0.1"
  },
  "devDependencies": {
    "babel-jest": "^6.0.1",
    "babel-preset-es2015": "^6.3.13",
    "eslint": "^2.7.0",
    "eslint-config-airbnb": "^6.2.0",
    "eslint-plugin-react": "^4.3.0",
    "jest-cli": "^0.8.2",
    "less": "^2.6.1",
    "less-plugin-autoprefix": "^1.5.1",
    "less-plugin-clean-css": "^1.5.1",
    "react-addons-test-utils": "^0.14.7",
    "watchify": "^3.7.0"
  },
  "jest": {
    "scriptPreprocessor": "<rootDir>/node_modules/babel-jest",
    "unmockedModulePathPatterns": [
      "<rootDir>/node_modules/react",
      "<rootDir>/node_modules/react-dom",
      "<rootDir>/node_modules/react-addons-test-utils",
      "<rootDir>/node_modules/fbjs"
    ]
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  }
}
